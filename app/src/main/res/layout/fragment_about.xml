<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?android:attr/windowBackground"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About RecipeApp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/about_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to RecipeApp â€“ your smart kitchen companion. Discover, save, and share delicious meals from around the world. Whether you're a beginner or a seasoned chef, our curated recipes and easy-to-follow instructions help you create something amazing every day."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp" />

        <!-- Mission Statement -->
        <TextView
            android:id="@+id/about_mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our mission is to make cooking easier, healthier, and more enjoyable for everyone. We believe that great food brings people together."
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="20dp" />

        <!-- Contact / Version -->
        <TextView
            android:id="@+id/about_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0\nContact: support@recipeapp.com"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="?android:attr/textColorTertiary" />

    </LinearLayout>
</ScrollView>